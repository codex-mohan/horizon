# ============================================================================
# Environment Configuration for Horizon Agent
# ============================================================================
# Copy this file to .env and fill in your API keys

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Choose your LLM provider: openai, anthropic, google, ollama, openai-compatible
LLM_PROVIDER=anthropic

# Model name (varies by provider)
# Anthropic: claude-sonnet-4-20250514, claude-opus-4-20250514, claude-haiku-3-20250514
# OpenAI: gpt-4o, gpt-4o-mini, gpt-4-turbo
# Google: gemini-2.0-flash-exp, gemini-1.5-pro
# Ollama: llama3.2, mistral, qwen2.5, deepseek-r1
# OpenAI-compatible: model-name (depends on your provider)
LLM_MODEL_NAME=claude-sonnet-4-20250514

# Model settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# =============================================================================
# API Keys (select based on your provider)
# =============================================================================

# Anthropic API Key (required for anthropic provider)
ANTHROPIC_API_KEY=

# OpenAI API Key (required for openai provider)
OPENAI_API_KEY=

# Google API Key (required for google/gemini provider)
GOOGLE_API_KEY=

# Ollama - no API key required, but base URL if not localhost
# OLLAMA_BASE_URL=http://localhost:11434

# OpenAI-compatible API (for LM Studio, LocalAI, etc.)
# OPENAI_COMPATIBLE_API_KEY=
# OPENAI_COMPATIBLE_BASE_URL=http://localhost:1234/v1

# =============================================================================
# Optional: Custom Base URLs
# =============================================================================

# Override default base URLs if needed
# OPENAI_BASE_URL=https://api.openai.com/v1
# ANTHROPIC_BASE_URL=https://api.anthropic.com

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, production
ENVIRONMENT=development

# Server settings
HOST=0.0.0.0
PORT=8000

# Database (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/horizon
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
